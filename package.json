{
  "name": "sfgov-design-system",
  "version": "1.1.0",
  "repository": "SFDigitalServices/design-system",
  "author": "City & County of San Francisco, California",
  "license": "MIT",
  "project": {
    "title": "SF.gov design system"
  },
  "files": [
    "dist",
    "docs",
    "src",
    "tailwind.config.js"
  ],
  "scripts": {
    "build": "run-s build-css build-js build-docs",
    "build-docs": "eleventy",
    "build-css": "postcss --verbose -d dist/css src/css/*.css",
    "build-js": "babel -d dist/js src/js/*.js",
    "build-clean": "run-s clean build",
    "clean": "rm -rf dist",
    "lint": "run-p lint-js",
    "lint-js": "eslint '*.js' 'src/**/*.js'",
    "watch": "run-p watch-css watch-js",
    "watch-css": "watchy -w '*.config.js' -w src -- npm run build-css",
    "watch-js": "npm run build-js -- --watch",
    "start": "eleventy --serve"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-navigation": "^0.2.0",
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@fec/eleventy-plugin-remark": "^2.2.1",
    "autoprefixer": "^10.2.6",
    "cssnano": "^5.0.6",
    "eslint": "^7.17.0",
    "eslint-plugin-sfgov": "^0.0.0-da6c354",
    "execa": "^5.0.0",
    "js-yaml": "^3.14.1",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.0",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.2",
    "postcss-nested": "^5.0.5",
    "postcss-normalize-charset": "^5.0.1",
    "postcss-strip-inline-comments": "^0.1.5",
    "rehype-stringify": "^8.0.0",
    "remark": "^13.0.0",
    "remark-autolink-headings": "^6.0.1",
    "remark-highlight.js": "^6.0.0",
    "remark-rehype": "^8.1.0",
    "remark-slug": "^6.0.0",
    "tailwindcss": "^2.0.2",
    "tailwindcss-interaction-variants": "^5.0.0",
    "unist-util-visit": "^2.0.3",
    "watchy": "^0.9.9"
  }
}
