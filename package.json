{
  "name": "sfgov-design-system",
  "version": "0.0.0",
  "repository": "SFDigitalServices/design-system",
  "author": "City & County of San Francisco, California",
  "license": "MIT",
  "project": {
    "title": "SF.gov design system"
  },
  "scripts": {
    "lint": "eslint",
    "build": "run-p build-fractal build-css",
    "build-fractal": "fractal build",
    "build-css": "postcss --verbose -d dist/css src/css/*.css",
    "build-clean": "run-s clean build",
    "clean": "rm -rf dist",
    "watch-css": "watchy -w '*.config.js' -w src/css -- npm run build-css",
    "start": "fractal start --sync",
    "vercel-build": "npm run build",
    "vercel-dev": "fractal start --port $PORT"
  },
  "devDependencies": {
    "@frctl/fractal": "^1.5.1",
    "@frctl/mandelbrot": "^1.6.0",
    "@frctl/nunjucks": "^2.0.5",
    "autoprefixer": "^9.8.4",
    "cssnano": "^4.1.10",
    "eslint": "^7.17.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "execa": "^5.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.1",
    "postcss-cli": "^8.3.1",
    "postcss-custom-properties": "^10.0.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^4.0.4",
    "postcss-nested": "^4.2.2",
    "postcss-normalize-charset": "^4.0.1",
    "postcss-scss": "^2.1.1",
    "postcss-strip-inline-comments": "^0.1.5",
    "tailwindcss": "^2.0.2",
    "watchy": "^0.9.9"
  }
}
