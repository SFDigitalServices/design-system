{
  "private": true,
  "repository": "SFDigitalServices/design-system",
  "workspaces": [
    "packages/*",
    "storybook",
    "website"
  ],
  "engines": {
    "node": "16.x",
    "npm": "8.x"
  },
  "scripts": {
    "build": "turbo run build",
    "clean": "npm run -ws --if-present clean",
    "lint": "turbo run lint",
    "postbuild": "cp -rf storybook/public/ website/public/storybook/",
    "start": "turbo run start --parallel",
    "storybook": "npm start -w storybook",
    "test": "turbo run test",
    "validate": "check-dependency-version-consistency .",
    "website": "npm start -w website"
  },
  "dependencies": {
    "autoprefixer": "^10.4.7",
    "check-dependency-version-consistency": "^3.0.0",
    "eslint": "^8.24.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-sfgov": "^2.0.0",
    "eslint-plugin-storybook": "^0.6.4",
    "eslint-plugin-unicorn": "^42.0.0",
    "shellcheck": "^1.1.0",
    "stylelint": "^14.8.4",
    "stylelint-config-standard": "^25.0.0",
    "turbo": "^1.5.6"
  }
}