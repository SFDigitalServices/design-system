{
  "name": "@sfgov/design-system",
  "version": "0.0.1",
  "workspaces": [
    "storybook",
    "website"
  ],
  "engines": {
    "node": "16.x",
    "npm": "8.x"
  },
  "files": [
    "*/dist/**",
    "**/*.{js,mjs,json,svg}",
    "css/lib/tailwind",
    "!**/*.{config.*,rc}",
    "!website/**",
    "!storybook/**"
  ],
  "scripts": {
    "build": "wireit",
    "build:ci": "wireit",
    "build:css": "postcss --verbose -d css/dist 'css/src/*.css'",
    "build:css-manifest": "node scripts/build-css-manifest.js",
    "build:js": "rollup -c",
    "build:manifest": "wireit",
    "figma-export": "env-cmd -f .env figma-export use-config",
    "lint": "wireit",
    "lint:css": "stylelint '**/src/*.css'",
    "lint:js": "eslint --ext js,jsx,mjs,ts,tsx css elements icons react scripts storybook website '*.{js,mjs}'",
    "lint:markdown": "markdownlint --rules './lib/markdownlint/*.js' --ignore '**/node_modules/**' '**/*.md'",
    "lint:scripts": "shellcheck scripts/*.sh",
    "postbuild": "cp -rf storybook/public/ website/public/storybook/",
    "postbuild:css": "npm run build:css-manifest",
    "postfigma-export": "eslint --fix react/src/icons",
    "prepublishOnly": "scripts/prepublish-checks.sh",
    "start": "wireit",
    "storybook": "npm start -w storybook",
    "test": "wireit",
    "watch": "wireit",
    "watch:css": "echo '(watch css)'",
    "watch:js": "rollup -c --watch",
    "watch:icons": "echo 'watch icons (noop)'",
    "website": "npm start -w website"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:css",
        "build:js",
        "build:manifest",
        "./storybook:build",
        "./website:build"
      ]
    },
    "build:ci": {
      "dependencies": [
        "build:css",
        "build:js"
      ]
    },
    "build:manifest": {
      "command": "scripts/manifest.js '{css,elements,icons,react}/dist/*.{css,*js,svg}' > dist/manifest.json",
      "dependencies": [
        "build:css",
        "build:js"
      ]
    },
    "lint": {
      "dependencies": [
        "lint:css",
        "lint:js",
        "lint:markdown",
        "lint:scripts"
      ]
    },
    "start": {
      "dependencies": [
        "watch",
        "./storybook:start",
        "./website:start"
      ]
    },
    "watch": {
      "dependencies": [
        "watch:css",
        "watch:js",
        "watch:icons"
      ]
    }
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^2.2.19"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "tailwindcss": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@figma-export/cli": "^4.5.0",
    "@figma-export/output-components-as-svg": "^4.5.0",
    "@figma-export/output-components-as-svgr": "^4.5.0",
    "@figma-export/transform-svg-with-svgo": "^4.5.0",
    "@figma-export/types": "^4.5.0",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@stitches/react": "^1.2.8",
    "@types/eslint": "^8.4.2",
    "@types/node": "^16.18.6",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "autoprefixer": "^10.4.7",
    "check-dependency-version-consistency": "^3.0.0",
    "core-js": "^3.27.1",
    "cssnano": "^5.1.14",
    "dedent": "^0.7.0",
    "dotenv": "^16.0.3",
    "env-cmd": "^10.1.0",
    "eslint": "^8.24.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-sfgov": "^2.0.0",
    "eslint-plugin-storybook": "^0.6.4",
    "eslint-plugin-unicorn": "^42.0.0",
    "filesize": "^8.0.7",
    "fs-extra": "^11.1.0",
    "globby": "^13.1.3",
    "js-yaml": "^4.1.0",
    "lodash.startcase": "^4.4.0",
    "markdownlint-cli": "^0.31.1",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.0",
    "prettysize": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.9.1",
    "rollup-cache": "^1.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^3.1.1",
    "shellcheck": "^1.1.0",
    "stylelint": "^14.8.4",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "stylelint-expiring-todo-comments": "^0.0.1",
    "svgo": "^3.0.2",
    "tailwindcss": "^2.2.19",
    "tailwindcss-interaction-variants": "^5.0.0",
    "typescript": "^4.9.3",
    "wireit": "^0.9.3"
  }
}