{
  "private": true,
  "repository": "SFDigitalServices/design-system",
  "workspaces": [
    "packages/*",
    "storybook",
    "website"
  ],
  "engines": {
    "node": "16.x",
    "npm": "8.x"
  },
  "scripts": {
    "build": "lerna run build",
    "lint": "lerna run lint",
    "postbuild": "cp -rf storybook/public/ website/public/storybook/",
    "start": "wireit",
    "storybook": "npm start -w storybook",
    "test": "lerna run test",
    "validate": "check-dependency-version-consistency .",
    "website": "npm start -w website"
  },
  "wireit": {
    "start": {
      "dependencies": [
        "website",
        "storybook"
      ]
    }
  },
  "dependencies": {
    "@lerna-lite/cli": "^1.12.0",
    "@lerna-lite/core": "^1.12.0",
    "@lerna-lite/exec": "^1.3.0",
    "@lerna-lite/run": "^1.3.0",
    "autoprefixer": "^10.4.7",
    "check-dependency-version-consistency": "^3.0.0",
    "eslint": "^8.24.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-sfgov": "^2.0.0",
    "eslint-plugin-storybook": "^0.6.4",
    "eslint-plugin-unicorn": "^42.0.0",
    "shellcheck": "^1.1.0",
    "stylelint": "^14.8.4",
    "stylelint-expiring-todo-comments": "^0.0.1",
    "stylelint-config-standard": "^25.0.0",
    "wireit": "^0.7.1"
  }
}