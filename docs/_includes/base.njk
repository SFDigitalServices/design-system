---
layout: skeleton
---
{% include 'header.njk' %}

{% set toc = content | toc %}

{% block main %}
  <div class="px-20 max-w-xl mx-auto mt-40 mb-100">
    <div class="lg:flex justify-end">
      <div class="lg:w-1/4 lg:mr-60 mb-40">
        {% block nav %}
          {% include 'nav.njk' %}
        {% endblock %}
      </div>
      <div class="lg:w-3/4">
        {% block content %}
          {% include 'title.njk' %}
          {% if toc %}
            <div class="flex justify-start flex-row-reverse">
              <div class="none lg:block lg:w-1/4 mb-40 ml-40">
                {% include 'toc.njk' %}
              </div>
              <div class="lg:w-3/4">
                {% include 'main.njk' %}
              </div>
            </div>
          {% else %}
            {% include 'main.njk' %}
          {% endif %}
        {% endblock %}
        {% include 'source-meta.njk' %}
      </div>
    </div>
  </div>
{% endblock %}

{% include 'footer.njk' %}
{% include 'scripts.njk' %}
