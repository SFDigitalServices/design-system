---
layout: skeleton
---
{% include 'header.njk' %}
{% block main %}
  <main class="px-20 max-w-xl mx-auto mt-40 mb-100">
    <div class="lg:flex justify-end">
      <div class="lg:w-1/4 lg:pr-100 mb-40">
        {% include 'nav.njk' %}
      </div>
      {% if toc %}
        <div class="lg:w-3/4 lg:flex justify-start flex-row-reverse">
          <div class="none lg:block lg:w-1/4 mb-40">
            {% include 'toc.njk' %}
          </div>
          <div class="lg:w-3/4">
            {% include 'main.njk' %}
          </div>
        </div>
      {% else %}
        <div class="lg:w-3/4">
          {% include 'main.njk' %}
        </div>
      {% endif %}
    </div>
  </main>
{% endblock %}
{% include 'footer.njk' %}
{% include 'scripts.njk' %}
