{
  "files": [
    "react/src/index.ts"
  ],
  "exclude": [
    "elements/index.{js,mjs}",
    "react/index.{js,mjs}",
    "**/node_modules/**",
    "**/*.config.*",
    "**/scripts/*.js"
  ],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@sfgov/design-system/css/*": [
        "./css/*"
      ],
      "@sfgov/design-system/elements/*": [
        "./elements/*"
      ],
      "@sfgov/design-system/icons/*": [
        "./icons/*"
      ],
      "@sfgov/design-system/react/*": [
        "./react/*"
      ],
    }
  }
}