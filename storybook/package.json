{
  "private": true,
  "name": "@sfgov/storybook",
  "config": {
    "port": 3001
  },
  "scripts": {
    "lint": "eslint --ext .js,.jsx . .storybook",
    "start": "wireit",
    "prebuild": "rm -rf public; mkdir public",
    "build": "wireit"
  },
  "wireit": {
    "start": {
      "command": "start-storybook --port=3001",
      "dependencies": []
    },
    "build": {
      "command": "build-storybook -o public",
      "clean": true,
      "files": [
        "public"
      ]
    }
  },
  "dependencies": {
    "clsx": "^1.1.0",
    "tailwind-styled-components": "^2.2.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.5.15",
    "@storybook/addon-essentials": "^6.5.15",
    "@storybook/addon-interactions": "^6.5.15",
    "@storybook/addon-links": "^6.5.15",
    "@storybook/addon-storysource": "^6.5.15",
    "@storybook/builder-webpack5": "^6.5.15",
    "@storybook/manager-webpack5": "^6.5.15",
    "@storybook/react": "^6.5.15",
    "@storybook/testing-library": "^0.0.13",
    "babel-loader": "^8.2.5",
    "storybook-addon-designs": "^6.3.1",
    "storybook-source-link": "^2.0.4"
  }
}